= form_for @idea do |f|
  -if @idea.errors.any?
    #error_explanation
      %h2= "#{pluralize(@idea.errors.count, "error")} prohibited this idea from being saved:"
      %ul
        - @idea.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :headline
    = f.text_area :headline
  .actions
    = f.submit 'Save'
